<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Two_Matrix"
    android:orientation="vertical"
    android:layout_marginStart="8dp">
    <TextView
        android:id="@+id/doubleMatrixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Double Matrix"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/doubleMatrixText1"
        android:layout_below="@+id/doubleMatrixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Choose Matrix Size"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_below="@+id/doubleMatrixText1"
        android:id="@+id/doubleMatrixLinearLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/doubleRowEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Row Size"
            android:inputType="numberDecimal"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/doubleColumnEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:hint="Column Size"
            android:layout_weight="1"/>
    </LinearLayout>
    <!--<LinearLayout
        android:layout_below="@+id/doubleMatrixLinearLay"
        android:id="@+id/doubleMatrixLinearLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/doubleRowEditText1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Row Size"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/doubleColumnEditText1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Column Size"
            android:layout_weight="1"/>
    </LinearLayout>-->
    <LinearLayout
        android:layout_below="@+id/doubleMatrixLinearLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/addBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Addtion"/>
        <Button
            android:id="@+id/subBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Subtraction"/>
    </LinearLayout>


</RelativeLayout>