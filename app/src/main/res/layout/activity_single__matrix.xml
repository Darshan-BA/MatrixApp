<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Single_Matrix"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_margin="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Matrix"
        android:textSize="40sp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singleMatrixText"
        android:text="Choose Matrix size"
        android:textSize="18sp"
        android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:id="@+id/singleMatspinner"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/determinantBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="Determinant" />

    <Button
        android:id="@+id/inverseBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Transpose"/>

</LinearLayout>